<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <TextView
            android:id="@+id/line"
            android:background="#380505"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/tvTextKuProductName"
            android:layout_marginLeft="5dp"
            android:text="상품명 : "
            android:textSize="12dp"
            android:layout_below="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvKuProductName"
            android:textSize="12dp"
            android:text="휴지"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_toRightOf="@+id/tvTextKuProductName" />

        <TextView
            android:id="@+id/tvTextKuProductPrice"
            android:text="가 격 : "
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTextKuProductName"
            android:layout_toEndOf="@+id/ivKuProductImage" />

        <TextView
            android:id="@+id/tvKuProductPrice"
            android:textSize="12dp"
            android:text="1000"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvTextKuProductPrice"
            android:layout_toRightOf="@+id/tvTextKuProductName"
            android:layout_toEndOf="@+id/tvTextKuProductName" />

        <TextView
            android:id="@+id/tvTextKuProductPriceUnit"
            android:textSize="12dp"
            android:text=" 원"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvTextKuProductCount"
            android:layout_toRightOf="@+id/tvKuProductPrice"
            android:layout_toEndOf="@+id/tvKuProductPrice" />

        <TextView
            android:id="@+id/tvTextKuProductCount"
            android:text="개 수 : "
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTextKuProductPrice"
            android:layout_alignLeft="@+id/tvTextKuProductPrice"
            android:layout_alignStart="@+id/tvTextKuProductPrice" />

        <TextView
            android:id="@+id/tvKuProductCount"
            android:textSize="12dp"
            android:text="3"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvTextKuProductCount"
            android:layout_alignLeft="@+id/tvKuProductPrice"
            android:layout_alignStart="@+id/tvKuProductPrice" />

        <TextView
            android:id="@+id/tvTextKuProductCountUnit"
            android:textSize="12dp"
            android:text=" 개"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvKuProductCount"
            android:layout_toRightOf="@+id/tvKuProductCount"
            android:layout_toEndOf="@+id/tvKuProductCount" />

        <TextView
            android:id="@+id/tvTextKuProductTotalPrice"
            android:textSize="12dp"
            android:text="계산된 가격 : "
            android:textStyle="bold"
            android:textColor="#00008b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/tvTextKuProductCount"
            android:layout_alignStart="@+id/tvTextKuProductCount" />

        <TextView
            android:id="@+id/tvKuProductTotalPrice"
            android:textSize="12dp"
            android:text="20000"
            android:textColor="#00008b"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/tvTextKuProductTotalPrice"
            android:layout_toEndOf="@+id/tvTextKuProductTotalPrice" />

        <TextView
            android:id="@+id/tvTextKuProductTotalPriceUnit"
            android:textSize="12dp"
            android:text=" 원"
            android:textColor="#00008b"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/tvKuProductTotalPrice"
            android:layout_toEndOf="@+id/tvKuProductTotalPrice" />

        <TextView
            android:id="@+id/tvTextSwipeTrash"
            android:textStyle="bold"
            android:text="&lt;"
            android:textColor="#dc143c"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ivTrashIcon"
            android:layout_toStartOf="@+id/ivTrashIcon" />

        <ImageView
            android:id="@+id/ivTrashIcon"
            android:background="@drawable/trash_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>