<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:paddingTop="15dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivFreeBoardImage"
            android:src="@drawable/no_detail_img"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp"
            android:scaleType="fitXY"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/tvFreeBoardTitle"
            android:textSize="15dp"
            android:text="자유게시판 제목"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvFreeBoardCount"
            android:layout_alignLeft="@+id/tvFreeBoardUserID"
            android:layout_alignStart="@+id/tvFreeBoardUserID" />

        <TextView
            android:id="@+id/tvFreeBoardUserID"
            android:text="vvshinevv"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ivFreeBoardImage"
            android:layout_toEndOf="@+id/ivFreeBoardImage" />

        <TextView
            android:id="@+id/tvFreeBoardUploadDate"
            android:layout_alignParentRight="true"
            android:textSize="10dp"
            android:text="2016-01-01"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvFreeBoardCount"
            android:text="조회수 : 0"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvFreeBoardUploadDate"
            android:layout_alignRight="@+id/tvFreeBoardUploadDate"
            android:layout_alignEnd="@+id/tvFreeBoardUploadDate" />

        <!--<TextView-->
            <!--android:id="@+id/tvFreeBoardReplyCount"-->
            <!--android:text="댓글 : 0"-->
            <!--android:textSize="10dp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_below="@+id/tvFreeBoardUploadDate"-->
            <!--android:layout_alignRight="@+id/tvFreeBoardUploadDate"-->
            <!--android:layout_alignEnd="@+id/tvFreeBoardUploadDate" />-->

        <TextView
            android:id="@+id/tvLine"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_marginTop="55dp"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/tvFreeBoardTempContents"
            android:text="자유게시판 내용\n하나\n둘\n셋\n넷\n다섯\n여섯"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLine"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:maxLines="5"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>