<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linMessageBox"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/chat_box_for_you">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvTextUserID"
                android:text="ID : "
                android:textSize="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvToUserID"
                android:text="userID"
                android:textSize="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvFromOrTo"
                android:text=" 부터 받음"
                android:textSize="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvSendMessageTime"
            android:textSize="9dp"
            android:text="2016-03-17 01:45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvMessage"
            android:text="안녕하세요? 반갑습니다."
            android:gravity="left"
            android:maxHeight="250dp"
            android:maxWidth="250dp"
            android:maxLines="30"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bAnswerMessage"
            android:textSize="10dp"
            android:text="답장하기"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:onClick="AnswerMessage"
            android:layout_width="70dp"
            android:layout_height="35dp" />
    </LinearLayout>
</LinearLayout>